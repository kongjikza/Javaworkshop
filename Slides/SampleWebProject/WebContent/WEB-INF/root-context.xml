<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc.xsd"
       xmlns:mvc="http://www.springframework.org/schema/mvc">

    <context:component-scan base-package="com.jas"/>
    
    <bean id="messageService" class="com.jas.spring.iocdi.web.HelloMessageServiceImpl" />
    
    <bean id="provinceService" class="com.jas.jpa.business.ProvinceServiceImpl" />
    <bean id="educationInstituteService" class="com.jas.jpa.business.EducationInstituteServiceImpl" />
        
	<context:annotation-config/>
    <mvc:annotation-driven />

</beans>